<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liorginsberg.talktodo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.liorginsberg.talktodo.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liorginsberg.talktodo.AddTaskDialog"
            android:label="@string/add_task"
            android:theme="@android:style/Theme.Holo.Dialog" >
        </activity>
           <activity
            android:name="com.liorginsberg.talktodo.AddTaskActivity"
            android:label="@string/add_task">
        </activity>
          <receiver android:name="MyBroadcastReceiver" >
        </receiver>
    </application>

</manifest>